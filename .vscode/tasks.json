{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "win32build",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "${fileDirname}/test.cpp",
                "-o",
                "${fileDirname}/a.exe",
                "-fexec-charset=gbk"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/clang++"
        }
    ]
}